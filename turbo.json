{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "MONGO_URI",
        "DB_NAME",
        "DEVICE_COLLECTION_NAME",
        "SECRET_KEY",
        "USER_COLLECTION_NAME",
        "PORT",
        "BASE_URL"
      ],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
